<div class='card-header'>
  <h2><%= @event.title %></h2>
</div>

<div class="card-body">
  <div class="row">
    <div class="col-2"><strong>Description:</strong></div>
    <div class="col-10"><%= @event.description %></div>
  </div>

  <div class="row">
    <div class="col-2"><strong>Day:</strong></div>
    <div class="col-10"><%= day_of_month(@event.month_schedule_day) %></div>
  </div>

  <div class="row">
    <div class="col-2"><strong>Time:</strong></div>
    <div class="col-10"><%= @event.time.strftime("%H:%M %p") %></div>
  </div>


</div>
<div class="card-footer">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-outline-primary mr-3" %>
      <%= link_to 'Back', events_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>

